<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.franzsarmiento.gridofbits.GameResultActivity">

    <TextView style="@style/title_text"
        android:id="@+id/tvTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/congratulations"
        android:textSize="28sp"
        android:id="@+id/tvCongratulations"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_time"
        android:id="@+id/tvYourTimeDifficulty"
        android:layout_below="@+id/tvCongratulations"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTotalTime"
        android:layout_below="@+id/tvYourTimeDifficulty"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_best_time"
        android:id="@+id/tvNewBestTime"
        android:layout_below="@+id/tvTotalTime"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_again"
        android:id="@+id/btnPlayAgain"
        android:layout_below="@+id/tvNewBestTime"
        android:layout_centerHorizontal="true"
        android:onClick="btnPlayAgainOnClick" />



</RelativeLayout>
