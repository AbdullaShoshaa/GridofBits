<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.franzsarmiento.gridofbits.BestTimesActivity">

    <TextView style="@style/title_text"
        android:id="@+id/tvTitle"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTitle"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView style="@style/best_times_text_view_title"
            android:text="@string/hard"
            android:id="@+id/tvHard" />

        <TextView style="@style/best_times_text_view_score"
            android:id="@+id/tvHard1st" />

        <TextView style="@style/best_times_text_view_score"
            android:id="@+id/tvHard2nd" />

        <TextView style="@style/best_times_text_view_score"
            android:id="@+id/tvHard3rd"/>

        <TextView style="@style/best_times_text_view_title"
            android:text="@string/medium"
            android:id="@+id/tvMedium" />

        <TextView style="@style/best_times_text_view_score"
            android:id="@+id/tvMedium1st" />

        <TextView style="@style/best_times_text_view_score"
            android:id="@+id/tvMedium2nd" />

        <TextView style="@style/best_times_text_view_score"
            android:id="@+id/tvMedium3rd" />

        <TextView style="@style/best_times_text_view_title"
            android:text="@string/easy"
            android:id="@+id/tvEasy"/>

        <TextView style="@style/best_times_text_view_score"
            android:id="@+id/tvEasy1st" />

        <TextView style="@style/best_times_text_view_score"
            android:id="@+id/tvEasy2nd" />

        <TextView style="@style/best_times_text_view_score"
            android:id="@+id/tvEasy3rd" />

    </LinearLayout>

</RelativeLayout>
