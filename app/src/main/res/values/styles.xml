<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="title_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@color/base_color</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/default_light_text_color</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="default_base_button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/base_color</item>
        <item name="android:textColor">@color/default_light_text_color</item>
    </style>

    <style name="best_times_text_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="best_times_text_view_title" parent="best_times_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="best_times_text_view_score" parent="best_times_text_view">
        <item name="android:layout_width">150dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="how_to_play_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="how_to_play_fake_toggle">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/default_light_text_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

</resources>
